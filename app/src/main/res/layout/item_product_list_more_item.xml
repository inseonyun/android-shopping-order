<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <Button
            android:id="@+id/bt_item_product_list_more"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/drawable_item_product_list_more"
            android:text="@string/item_product_list_more_text"
            android:textColor="@color/product_info_text_color"
            android:textSize="16sp"
            app:layout_constraintDimensionRatio="H,320:40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
