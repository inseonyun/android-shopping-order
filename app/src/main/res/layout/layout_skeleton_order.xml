<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <View
        android:id="@+id/tv_skeleton_order_title_info"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@color/skeleton_background_color"
        app:layout_constraintDimensionRatio="H, 4:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/view_skeleton_order_cart_item"
        layout="@layout/layout_skeleton_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_skeleton_order_title_info" />

    <include
        android:id="@+id/view_skeleton_order_title_item"
        layout="@layout/layout_skeleton_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_skeleton_order_cart_item" />

    <include
        android:id="@+id/view_skeleton_order_cart_item2"
        layout="@layout/layout_skeleton_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_skeleton_order_title_item" />

    <include
        android:id="@+id/view_skeleton_order_title_item2"
        layout="@layout/layout_skeleton_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_skeleton_order_cart_item2" />

</androidx.constraintlayout.widget.ConstraintLayout>
