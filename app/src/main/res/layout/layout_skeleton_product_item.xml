<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="10dp">

    <View
        android:id="@+id/iv_product_thumbnail"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:background="@color/skeleton_background_color"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_skeleton_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@color/skeleton_background_color"
        app:layout_constraintEnd_toEndOf="@id/iv_product_thumbnail"
        app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/iv_product_thumbnail" />

    <TextView
        android:id="@+id/tv_skeleton_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@color/skeleton_background_color"
        app:layout_constraintEnd_toEndOf="@id/tv_skeleton_product_title"
        app:layout_constraintStart_toStartOf="@id/iv_product_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_skeleton_product_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>